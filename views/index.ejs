<%- include header.ejs %>
<%- messages() %>
<div class="hero-unit">
	<h1>Welcome to Impression Site</h1>
	<p>This site enables you to upload your profile and collect the impressions from your friends, displayed as the marquee. You can also send your impression as the marquee hovering over their profiles.</p>
	<p>
		<a class="btn btn-primary btn-large" href="/login">Log in</a>
		<a class="btn btn-info btn-large" href="/reg">Sign up</a>
		<a class="btn btn-warning btn-large" href="/guide">First Time Coming Here? Click This Button!</a>
	</p>
</div>

<% posts.forEach(function(post, index) {
	if (index % 3 == 0) { %>
	<div class="row">
<% } %>
	<div class="span3">
		<h4><a href="/u/<%= post.user %>"><%= post.user %></a></h4>
		<img src="/image/<%= post.user %>/<%= post.post.name %>" />
  	</div>
<% if (index % 3 == 2) { %>
    </div><!-- end row -->
<% } %>
<%}) %>
<% if (posts.length % 3 != 0) { %>
  </div><!-- end row -->
<%} %>

<%- include footer.ejs %>