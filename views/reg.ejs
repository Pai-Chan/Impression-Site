<%- include header.ejs %>
<%- messages() %>
<form class="form-horizontal" method="post">
	<fieldset>
		<legend>Registration</legend>
		<div class="control-group">
			<label class="control-label" for="username">Username</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="username" name="username">
				<p class="help-block">The name of your account for login and display.</p>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="userpwd">Keyword</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="userpwd" name="userpwd">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="pwdrepeat">Keyword Repeated</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="pwdrepeat" name="pwdrepeat">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="pwdrepeat">Invitation Code</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="invitationcode" name="invitationcode">
				<p class="help-block">You can ask the owner of this website to give you the code.</p>
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Register</button>
		</div>
	</fieldset>
</form>
<%- include footer.ejs %>